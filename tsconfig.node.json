{
  "compilerOptions": {
    "composite": true,
    "module": "CommonJS",
    "target": "ES2022",
    "moduleResolution": "Node",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/server/**/*.ts", "src/types/**/*.ts"],
  "exclude": ["vite.config.mts"]
}
